include ../Makefile.tests_common

USEMODULE += rtd_oem
USEMODULE += event_callback

# Example for providing settings through CFLAGS. Change them based on your setup
RTD_OEM_PARAM_I2C  ?= I2C_DEV\(0\)
RTD_OEM_PARAM_ADDR ?= 0x68
RTD_OEM_PARAM_INTERRUPT_PIN ?= GPIO_PIN\(0,28\)

# Most likely just GPIO_IN. Else GPIO_IN_PU for RTD_OEM_IRQ_FALLING and GPIO_IN_PD
# for RTD_OEM_IRQ _RISING and RTD_OEM_IRQ_BOTH
RTD_OEM_PARAM_INTERRUPT_GPIO_MODE ?= GPIO_IN_PD

#RTD_OEM_IRQ_BOTH, RTD_OEM_IRQ_RISING or RTD_OEM_IRQ_FALLING
RTD_OEM_PARAM_INTERRUPT_OPTION ?= RTD_OEM_IRQ_RISING

# export parameters. Uncomment the one you want to use
#CFLAGS += -DRTD_OEM_PARAM_I2C=$(RTD_OEM_PARAM_I2C)
#CFLAGS += -DRTD_OEM_PARAM_ADDR=$(RTD_OEM_PARAM_ADDR)
#CFLAGS += -DRTD_OEM_PARAM_INTERRUPT_PIN=$(RTD_OEM_PARAM_INTERRUPT_PIN)
#CFLAGS += -DRTD_OEM_PARAM_INTERRUPT_GPIO_MODE=$(RTD_OEM_PARAM_INTERRUPT_GPIO_MODE)
#CFLAGS += -DRTD_OEM_PARAM_INTERRUPT_OPTION=$(RTD_OEM_PARAM_INTERRUPT_OPTION)

include $(RIOTBASE)/Makefile.include
