include ../Makefile.tests_common

USEMODULE += ec_oem
USEMODULE += event_callback

# Example for providing settings through CFLAGS. Change them based on your setup
EC_OEM_PARAM_I2C  ?= I2C_DEV\(0\)
EC_OEM_PARAM_ADDR ?= 0x64
EC_OEM_PARAM_INTERRUPT_PIN ?= GPIO_PIN\(0,28\)

# Most likely just GPIO_IN. Else GPIO_IN_PU for EC_OEM_IRQ_FALLING and GPIO_IN_PD
# for EC_OEM_IRQ _RISING and EC_OEM_IRQ_BOTH
EC_OEM_PARAM_INTERRUPT_GPIO_MODE ?= GPIO_IN_PD

#EC_OEM_IRQ_BOTH, EC_OEM_IRQ_RISING or EC_OEM_IRQ_FALLING
EC_OEM_PARAM_INTERRUPT_OPTION ?= EC_OEM_IRQ_RISING

# export parameters. Uncomment the one you want to use
#CFLAGS += -DEC_OEM_PARAM_I2C=$(EC_OEM_PARAM_I2C)
#CFLAGS += -DEC_OEM_PARAM_ADDR=$(EC_OEM_PARAM_ADDR)
#CFLAGS += -DEC_OEM_PARAM_INTERRUPT_PIN=$(EC_OEM_PARAM_INTERRUPT_PIN)
#CFLAGS += -DEC_OEM_PARAM_INTERRUPT_GPIO_MODE=$(EC_OEM_PARAM_INTERRUPT_GPIO_MODE)
#CFLAGS += -DEC_OEM_PARAM_INTERRUPT_OPTION=$(EC_OEM_PARAM_INTERRUPT_OPTION)

include $(RIOTBASE)/Makefile.include
