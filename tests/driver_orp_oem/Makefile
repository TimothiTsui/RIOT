include ../Makefile.tests_common

USEMODULE += orp_oem
USEMODULE += event_callback

# Example for providing settings through CFLAGS. Change them based on your setup
ORP_OEM_PARAM_I2C  ?= I2C_DEV\(0\)
ORP_OEM_PARAM_ADDR ?= 0x66
ORP_OEM_PARAM_INTERRUPT_PIN ?= GPIO_PIN\(0,28\)

# Most likely just GPIO_IN. Else GPIO_IN_PU for ORP_OEM_IRQ_FALLING and GPIO_IN_PD
# for ORP_OEM_IRQ _RISING and ORP_OEM_IRQ_BOTH
ORP_OEM_PARAM_INTERRUPT_GPIO_MODE ?= GPIO_IN_PD

#ORP_OEM_IRQ_BOTH, ORP_OEM_IRQ_RISING or ORP_OEM_IRQ_FALLING
ORP_OEM_PARAM_INTERRUPT_OPTION ?= ORP_OEM_IRQ_RISING

# export parameters. Uncomment the one you want to use
#CFLAGS += -DORP_PARAM_I2C=$(ORP_OEM_PARAM_I2C)
#CFLAGS += -DORP_PARAM_ADDR=$(ORP_OEM_PARAM_ADDR)
CFLAGS += -DORP_OEM_PARAM_INTERRUPT_PIN=$(ORP_OEM_PARAM_INTERRUPT_PIN)
#CFLAGS += -DORP_PARAM_INTERRUPT_GPIO_MODE=$(ORP_OEM_PARAM_INTERRUPT_GPIO_MODE)
#CFLAGS += -DORP_PARAM_INTERRUPT_OPTION=$(ORP_OEM_PARAM_INTERRUPT_OPTION)

include $(RIOTBASE)/Makefile.include
