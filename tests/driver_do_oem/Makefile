include ../Makefile.tests_common

USEMODULE += do_oem
USEMODULE += event_callback

# Example for providing settings through CFLAGS. Change them based on your setup
DO_OEM_PARAM_I2C  ?= I2C_DEV\(0\)
DO_OEM_PARAM_ADDR ?= 0x67
DO_OEM_PARAM_INTERRUPT_PIN ?= GPIO_PIN\(0,28\)

# Most likely just GPIO_IN. Else GPIO_IN_PU for DO_OEM_IRQ_FALLING and GPIO_IN_PD
# for DO_OEM_IRQ _RISING and DO_OEM_IRQ_BOTH
DO_OEM_PARAM_INTERRUPT_GPIO_MODE ?= GPIO_IN_PD

#DO_OEM_IRQ_BOTH, DO_OEM_IRQ_RISING or DO_OEM_IRQ_FALLING
DO_OEM_PARAM_INTERRUPT_OPTION ?= DO_OEM_IRQ_RISING

# export parameters. Uncomment the one you want to use
#CFLAGS += -DDO_OEM_PARAM_I2C=$(DO_OEM_PARAM_I2C)
#CFLAGS += -DDO_OEM_PARAM_ADDR=$(DO_OEM_PARAM_ADDR)
CFLAGS += -DDO_OEM_PARAM_INTERRUPT_PIN=$(DO_OEM_PARAM_INTERRUPT_PIN)
#CFLAGS += -DDO_OEM_PARAM_INTERRUPT_GPIO_MODE=$(DO_OEM_PARAM_INTERRUPT_GPIO_MODE)
#CFLAGS += -DDO_OEM_PARAM_INTERRUPT_OPTION=$(DO_OEM_PARAM_INTERRUPT_OPTION)

include $(RIOTBASE)/Makefile.include
